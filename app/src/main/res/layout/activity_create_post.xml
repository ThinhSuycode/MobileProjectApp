<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo bài viết mới"
            android:textColor="#212121"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <!-- Image URL -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Link hình ảnh (URL):"
            android:textColor="#616161"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etImageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dán liên kết ảnh vào đây..."
            android:inputType="textUri"
            android:textColor="#212121"
            android:textColorHint="#9E9E9E"
            android:background="@drawable/bg_input_light"
            android:padding="12dp"
            android:layout_marginBottom="15dp"/>

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiêu đề:"
            android:textColor="#616161"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etPostTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Tiêu đề bài viết"
            android:textColor="#212121"
            android:textColorHint="#9E9E9E"
            android:background="@drawable/bg_input_light"
            android:padding="12dp"
            android:layout_marginBottom="15dp"/>

        <!-- Category -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh mục:"
            android:textColor="#616161"
            android:layout_marginBottom="5dp"/>

        <Spinner
            android:id="@+id/spinnerCategories"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_light"
            android:layout_marginBottom="15dp"/>

        <!-- Content -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung:"
            android:textColor="#616161"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etPostContent"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:background="@drawable/bg_input_light"
            android:gravity="top|start"
            android:hint="Nội dung chi tiết..."
            android:padding="12dp"
            android:textColor="#212121"
            android:textColorHint="#9E9E9E"
            android:lineSpacingExtra="4dp" />

        <!-- Submit -->
        <Button
            android:id="@+id/btnSubmitPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng bài"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/blue_primary"
            android:padding="12dp"/>

    </LinearLayout>
</ScrollView>
