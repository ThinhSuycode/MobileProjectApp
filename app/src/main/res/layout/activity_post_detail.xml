<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_card"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnBackDetail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="#FFFFFF"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/tvDetailCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh mục"
            android:textColor="#FF9800"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tvDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày đăng: --/--/----"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/tvDetailAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người đăng: ..."
            android:textColor="#BB86FC"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tvDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiêu đề bài viết"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:id="@+id/imgDetailPost"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitCenter"
            android:layout_marginBottom="20dp"
            android:src="@android:drawable/ic_menu_gallery"/>

        <TextView
            android:id="@+id/tvDetailContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung chi tiết..."
            android:textSize="16sp"
            android:textColor="#DDDDDD"
            android:lineSpacingExtra="5dp"/>

    </LinearLayout>
</ScrollView>